@{

    //vyzvednutí hodnoty ze slovníku, proměnná ok bude dále na této stránce k dispozici
    bool ok = (bool)ViewData["ok"];    
}
<h1>Stav připojení DB</h1>

<div class="card card-body">
    @DateTime.Now
    <br />
    <br />
    Stav připojení DB:
    <br />
    @if (!ok)
    {
        <div class="alert alert-success" role="alert">
            Připojení k DB OK
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Chyba v připojení k DB
        </div>
    }        
    @* DB CanConnect: @ok  *@


</div>
